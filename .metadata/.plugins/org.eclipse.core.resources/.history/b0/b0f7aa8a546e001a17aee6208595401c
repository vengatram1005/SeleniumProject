package com.greens;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

public class Sample {
	
	public String getdata(String colunmName, String query) throws Throwable {
		String data=null;
		
		Connection connection = null;
		try {
			Class.forName("com.mysql.jdbc.Driver");

			connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/selenium_schema", "root", "");

			PreparedStatement ps = connection.prepareStatement(query);

			ResultSet rs = ps.executeQuery();

			while (rs.next()) {

				int id = rs.getInt("StudentID");
				System.out.println(id);

				data = rs.getString("StudentName");

				data = rs.getString("StudentAge");

			}

		} catch (Throwable e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} finally {
			connection.close();
		}

return data;
	}

	public static void main(String[] args) throws Throwable {

		
	}

}
